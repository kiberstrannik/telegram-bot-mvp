{
  "name": "telegram-bot-mvp",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env RENDER_SERVICE=local NODE_ENV=development tsx watch src/index.ts",
    "build": "npm install --include=dev @types/express @types/node && tsc -p .",
    "start": "tsx src/index.ts",
    "migrate": "tsx src/migrate.ts",
    "postinstall": "npm rebuild better-sqlite3",
    "render": "cross-env RENDER_SERVICE=worker NODE_ENV=production tsx src/index.ts",
    "web": "cross-env RENDER_SERVICE=web NODE_ENV=production tsx src/index.ts"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.1",
    "axios": "^1.12.2",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "gpt3-tokenizer": "^1.1.5",
    "grammy": "^1.38.3",
    "openai": "^4.104.0",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@grammyjs/types": "^3.22.2",
    "@types/axios": "^0.9.36",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.4",
    "@types/node": "^20.19.23",
    "cross-env": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
